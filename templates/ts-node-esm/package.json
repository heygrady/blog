{
  "name": "@heygrady/ts-node-esm",
  "version": "1.2.1",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/heygrady/blog.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "yarn clean && concurrently --timings --prefix --names \"cjs,esm,tsc\" \"yarn build:cjs\" \"yarn build:esm\" \"yarn build:types\"",
    "build:cjs": "yarn prebuild:cjs && swc src -d dist/cjs --source-maps --copy-files -C module.type=commonjs",
    "build:esm": "swc src -d dist/esm --source-maps --copy-files -C module.type=es6",
    "build:types": "tsc --declaration --emitDeclarationOnly --project tsconfig.types.json --outDir dist/types",
    "clean": "rimraf dist coverage",
    "coverage": "vitest --coverage",
    "debug": "yarn build && nodemon --exec 'node --inspect=0.0.0.0:9229 ./dist/esm/index.js'",
    "dev": "yarn clean && concurrently --timings --prefix --names \"cjs,esm,tsc\" \"yarn dev:cjs\" \"yarn dev:esm\" \"yarn dev:types\"",
    "dev:cjs": "yarn prebuild:cjs && swc --watch src -d dist/cjs --source-maps --copy-files -C module.type=commonjs",
    "dev:esm": "swc --watch src -d dist/esm --source-maps --copy-files -C module.type=es6",
    "dev:types": "tsc --watch --declaration --emitDeclarationOnly --project tsconfig.types.json --outDir dist/types",
    "format": "eslint \"**/*.{md,cjs,mjs,js,jsx,cts,.ts,ts,tsx,json}\" --fix",
    "lint": "eslint \"**/*.{md,cjs,mjs,js,jsx,cts,.ts,ts,tsx,json}\"",
    "prebuild:cjs": "mkdir -p dist/cjs && echo '{\"type\":\"commonjs\",\"main\":\"./index.js\"}' >> dist/cjs/package.json",
    "precommit": "lint-staged",
    "test": "vitest"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.3"
  },
  "devDependencies": {
    "@heygrady/eslint-config": "^1.5.1",
    "@heygrady/tsconfig-bases": "^1.0.6",
    "@rushstack/eslint-patch": "^1.5.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.96",
    "@types/eslint": "^8",
    "@types/prettier": "^2",
    "@types/rimraf": "^4",
    "@vitest/coverage-v8": "^0.34.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{md,cjs,mjs,js,jsx,cts,.ts,ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "node 16.14.0"
  ],
  "engines": {
    "node": ">=16.14.0"
  },
  "volta": {
    "extends": "../../package.json",
    "node": "16.17.0",
    "npm": "8.19.2",
    "yarn": "1.22.19"
  },
  "packageManager": "yarn@3.2.2"
}
