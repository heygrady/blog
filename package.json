{
  "name": "@heygrady/blog",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heygrady/blog.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run --concurrency=4 build",
    "claude": "yarn dlx @anthropic-ai/claude-code",
    "gemini": "yarn dlx @google/gemini-cli",
    "clean": "turbo run clean",
    "clean:hard": "turbo run clean --force && find . -name node_modules -type d -prune -exec rm -rf {} +",
    "coverage": "turbo run --concurrency=4 coverage",
    "coverage:ci": "turbo run --concurrency=2 coverage -- --maxWorkers=2 --forceExit",
    "format": "turbo run --concurrency=4 format",
    "lint": "turbo run --concurrency=4 lint",
    "prepare": "husky",
    "release": "yarn build && changeset publish",
    "start": "yarn workspace @heygrady/blog-app start",
    "test": "turbo run --concurrency=4 test",
    "test:ci": "turbo run --concurrency=2 test -- --maxWorkers=2 --forceExit",
    "version": "changeset version && yarn install"
  },
  "packageManager": "yarn@3.6.4",
  "volta": {
    "node": "20.19.5",
    "npm": "11.6.2",
    "yarn": "3.6.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/config-lerna-scopes": "^20.0.0",
    "@heygrady/create-post": "1.0.9",
    "@manypkg/cli": "^0.25.1",
    "firebase-tools": "^14.26.0",
    "husky": "^9.1.7",
    "turbo": "^2.6.1"
  }
}
