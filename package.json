{
  "name": "@heygrady/blog",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heygrady/blog.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "yarn check:changesets && yarn check:manypkg && yarn check:biome",
    "check:biome": "biome ci",
    "check:changesets": "changeset status --verbose",
    "check:manypkg": "manypkg check",
    "clean": "turbo run clean",
    "clean:hard": "turbo run clean --force && find . -name node_modules -type d -prune -exec rm -rf {} +",
    "coverage": "turbo run coverage",
    "coverage:ci": "turbo run coverage --concurrency=2 -- --passWithNoTests --run",
    "dev": "yarn workspace @heygrady/blog-app dev:workspace",
    "format": "biome check --write && turbo run format --filter=@heygrady/eslint-config",
    "lint": "biome check && turbo run lint --filter=@heygrady/eslint-config",
    "prepare": "husky",
    "release": "yarn build && changeset publish",
    "start": "yarn workspace @heygrady/blog-app start",
    "test": "turbo run test -- --passWithNoTests",
    "test:ci": "turbo run test --concurrency=2 -- --passWithNoTests",
    "version": "changeset version && yarn install"
  },
  "packageManager": "yarn@4.12.0",
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.4",
    "yarn": "4.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/config-workspace-scopes": "^20.0.0",
    "@heygrady/create-post": "workspace:*",
    "@manypkg/cli": "^0.25.1",
    "firebase-tools": "^14.26.0",
    "husky": "^9.1.7",
    "turbo": "^2.6.1"
  }
}
