{
  "name": "@heygrady/blog",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heygrady/blog.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run --concurrency=4 build",
    "clean": "turbo run clean",
    "clean:hard": "turbo run clean --force && yarn workspaces foreach exec \"rm -drf node_modules\" && rm -drf node_modules",
    "coverage": "turbo run --concurrency=4 coverage",
    "coverage:ci": "turbo run --concurrency=2 coverage -- --maxWorkers=2 --forceExit",
    "format": "turbo run --concurrency=4 format",
    "lint": "turbo run --concurrency=4 lint",
    "postinstall": "husky install",
    "release": "yarn build && changeset publish",
    "start": "yarn workspace @heygrady/blog-app start",
    "test": "turbo run --concurrency=4 test",
    "test:ci": "turbo run --concurrency=2 test -- --maxWorkers=2 --forceExit",
    "version": "changeset version && yarn install"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/config-lerna-scopes": "^17.0.2",
    "@heygrady/create-post": "workspace:*",
    "@manypkg/cli": "^0.19.2",
    "firebase-tools": "^11.13.0",
    "husky": "^8.0.1",
    "turbo": "^1.5.5"
  },
  "packageManager": "yarn@3.2.3",
  "volta": {
    "node": "16.17.0",
    "npm": "8.18.0",
    "yarn": "1.22.19"
  }
}
