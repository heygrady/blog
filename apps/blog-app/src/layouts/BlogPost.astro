---



import { Picture } from 'astro:assets'

import BaseHead from '../components/BaseHead.astro'
import Bio from '../components/Bio.astro'
import Body from '../components/Body.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import { format } from '../utils/date'
import { styleToString } from '../utils/styleToString'
import { typography } from '../utils/typography'

export interface Props {
  frontmatter: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage?: string
  }
}

const {
  frontmatter: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props

// Import all images from the images folder (excluding profile-pic which is statically imported elsewhere)
const images = import.meta.glob<{ default: ImageMetadata }>(
  ['../images/*.{jpeg,jpg,png,gif,webp}', '!../images/profile-pic.jpg']
)

const heroImageMetadata = heroImage && images[`../images/${heroImage}`]
  ? (await images[`../images/${heroImage}`]()).default
  : undefined
---

<html lang="en-US">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Body>
      <Header small />
      <main>
        <article>
          <h1 class="BlogPost__headline">{title}</h1>
          <p
            style={styleToString({
              ...typography.scale(-1 / 5),
              display: 'block',
              marginBottom: typography.rhythm(0.5),
              marginTop: typography.rhythm(-1),
            })}>
            {pubDate && <time>{format(pubDate)}</time>}
            {
              updatedDate && (
                <div>
                  Last updated on <time>{updatedDate}</time>
                </div>
              )
            }
          </p>
          <h2
            style={styleToString({
              color: '#C6C8CA',
              paddingTop: typography.rhythm(1.5),
              borderTop: '4px solid #FF4C3B',
              fontSize: '1.2rem',
              lineHeight: '1.4em',
              fontWeight: 'normal',
              fontStyle: 'italic',
              marginBottom: typography.rhythm(1.5),
              marginTop: typography.rhythm(0.5),
            })}>
            {description}
          </h2>
          {
            heroImageMetadata && (
              <div class="BlogPost__hero">
                <Picture
                  widths={[780, 1440]}
                  sizes={'(max-width: 720px) 780px, 1440px'}
                  formats={['avif', 'webp']}
                  quality={70}
                  width={1440}
                  height={720}
                  src={heroImageMetadata}
                  alt=""
                />
                <style>
                  .BlogPost__hero picture {
                    display: block;
                    width: 100%;
                    height: 0;
                    padding-bottom: 50%;
                    position: relative;
                    margin-bottom: 1.75rem;
                  }
                  .BlogPost__hero img {
                    position: absolute;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                  }
                </style>
              </div>
            )
          }
          <slot />
        </article>
        <hr
          style={styleToString({
            background: 'none',
            border: 'none',
            borderTop: '4px solid #FF4C3B',
            marginBottom: typography.rhythm(1),
          })}
        />
      </main>
      <Bio />
      <Footer />
    </Body>
    <style define:vars={{ rhythm_2: typography.rhythm(2) }}>
      :global(.astro-code) {
        padding: 0.83255rem 1.75rem;
        margin-left: -1.75rem;
        margin-right: -1.75rem;
      }
      .BlogPost__headline {
        margin-top: var(--rhythm_2);
        line-height: var(--rhythm_2);
      }
    </style>
  </body>
</html>
