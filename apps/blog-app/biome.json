{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "extends": "//",
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "html": {
    "experimentalFullSupportEnabled": true
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          },
          "complexity": {
            "noArguments": "off"
          }
        }
      }
    }
  ]
}
