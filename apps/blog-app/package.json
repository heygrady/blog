{
  "name": "@heygrady/blog-app",
  "version": "1.3.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heygrady/blog.git"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "clean": "rimraf .turbo dist",
    "dev": "astro dev",
    "dev:workspace": "turbo run dev --filter='@heygrady/blog-app...' --concurrency=7",
    "start": "astro dev",
    "build": "astro build",
    "check": "astro check",
    "format": "eslint \"**/*.{astro,md,cjs,mjs,js,jsx,cts,mts,ts,tsx,json}\" --fix",
    "format:prettier": "prettier \"src/**/*.astro\" --write",
    "lint": "eslint \"**/*.{astro,md,cjs,mjs,js,jsx,cts,mts,ts,tsx,json}\"",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@fontsource/inconsolata": "^5.2.8",
    "@fontsource/merriweather": "^5.2.11",
    "@fontsource/montserrat": "^5.2.8",
    "date-fns": "^4.1.0",
    "firebase": "^12.6.0",
    "sharp": "^0.34.5",
    "typography": "^0.16.24",
    "typography-theme-wordpress-2016": "^0.16.19"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@heygrady/eslint-config": "workspace:^",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.15.29",
    "@types/prettier": "^2.7.3",
    "@types/rimraf": "^4.0.5",
    "@types/typography": "^0.16.8",
    "astro": "^5.16.3",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{astro,md,cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "last 10 chrome versions",
    "last 5 firefox versions",
    "last 2 safari versions",
    "last 2 ios versions"
  ],
  "engines": {
    "node": ">=18.14.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
