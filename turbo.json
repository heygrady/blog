{
  "$schema": "https://turbo.build/schema.json",
  "concurrency": "4",
  "tasks": {
    "build": {
      "inputs": [
        "src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx,css,scss,md,mdx,jpg,png,svg}",
        "*.config.{cjs,mjs,js,ts}",
        "package.json"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "coverage": {
      "inputs": [
        "src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "test/**/*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "package.json"
      ],
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "^test"
      ],
      "cache": true
    },
    "format": {
      "inputs": [
        "src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "test/**/*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "package.json"
      ],
      "cache": true
    },
    "lint": {
      "inputs": [
        "src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "test/**/*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "package.json"
      ],
      "cache": true
    },
    "precommit": {
      "inputs": [
        "src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "test/**/*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "package.json"
      ],
      "cache": false
    },
    "test": {
      "inputs": [
        "src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "test/**/*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}",
        "package.json"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    }
  }
}
