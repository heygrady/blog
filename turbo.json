{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["src/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx,css,scss,jpg,png,svg}", "package.json"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "clean": {},
    "coverage": {
      "inputs": ["**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "test/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "package.json"],
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "format": {
      "inputs": ["**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "test/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "package.json"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "test/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "package.json"],
      "dependsOn": ["^build"]
    },
    "precommit": {
      "inputs": ["**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "test/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "package.json"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "test/**/*.{astro,cjs,mjs,js,jsx,cts,mts,ts,tsx}", "package.json"],
      "dependsOn": ["^build"]
    }
  }
}
